# VabHub 生产环境配置
# =====================

# 应用版本
VERSION=1.3.0

# 环境配置
ENVIRONMENT=production
LOG_LEVEL=INFO

# 服务端口配置
BACKEND_PORT=8090
FRONTEND_PORT=8080
REDIS_PORT=6379
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# 数据库配置
DATABASE_URL=postgresql://vabhub:vabhub123@postgres:5432/vabhub
POSTGRES_DB=vabhub
POSTGRES_USER=vabhub
POSTGRES_PASSWORD=vabhub123

# Redis配置
REDIS_URL=redis://:vabhub123@redis:6379/0
REDIS_PASSWORD=vabhub123

# 监控配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# 备份配置
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=7

# 安全配置
SECRET_KEY=your-production-secret-key-change-this
JWT_SECRET=your-jwt-secret-key-change-this

# 性能配置
WORKER_COUNT=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# 插件配置
PLUGIN_DIR=/app/plugins
PLUGIN_AUTO_UPDATE=true

# 媒体库配置
MEDIA_LIBRARY_PATH=/media
DOWNLOAD_PATH=/downloads
TEMP_PATH=/tmp

# 通知配置
NOTIFICATION_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# PT站点配置
PT_SITES_ENABLED=true
PT_AUTO_SIGNIN=true
PT_SEARCH_INTERVAL=3600

# 下载器配置
DOWNLOADER_TYPE=qbittorrent
QBITTORRENT_HOST=qbittorrent
QBITTORRENT_PORT=8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# 媒体服务器配置
MEDIA_SERVER_TYPE=plex
PLEX_HOST=plex
PLEX_PORT=32400
PLEX_TOKEN=your-plex-token

# 外部访问配置
EXTERNAL_URL=https://your-domain.com
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem